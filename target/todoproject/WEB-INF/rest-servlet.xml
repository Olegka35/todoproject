<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
        http://www.springframework.org/schema/mvc
        http://www.springframework.org/schema/mvc/spring-mvc-4.0.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context-4.0.xsd
        ">

    <context:component-scan base-package="todo"/>
    <mvc:annotation-driven/>

    <bean id="taskServiceImpl" class="todo.service.impl.TaskServiceImpl"/>
    <bean id="userServiceImpl" class="todo.service.impl.UserServiceImpl"/>
    <bean id="restController" class="todo.controller.RestController">
        <property name="taskService" ref="taskServiceImpl"/>
        <property name="userService" ref="userServiceImpl"/>
    </bean>



</beans>