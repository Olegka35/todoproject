<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

    <class name="todo.domain.Task" table="tasks">
        <id name="id" type="java.lang.Integer">
            <column name="ID"/>
            <generator class="identity"/>
        </id>
        <many-to-one name="user" class="todo.domain.User" lazy="false" fetch="join">
            <column name="user" not-null="true"/>
        </many-to-one>
        <!--<property name="user" type="java.lang.Integer">
            <column name="user"/>
        </property>-->
        <property name="userID" type="java.lang.Integer" insert="false" update="false">
            <column name="user"/>
        </property>
        <property name="name" type="string">
            <column name="name" not-null="true"/>
        </property>
        <property name="description" type="string">
            <column name="description"/>
        </property>
        <property name="priority" type="java.lang.Integer">
            <column name="priority"/>
        </property>
        <property name="status" type="java.lang.Integer">
            <column name="status" />
        </property>
    </class>

    <class name="todo.domain.User" table="users">
        <id name="ID" type="java.lang.Integer">
            <column name="ID"/>
            <generator class="identity"/>
        </id>
        <property name="login" type="java.lang.String">
            <column name="Login"/>
        </property>
        <property name="password" type="java.lang.String">
            <column name="password"/>
        </property>
        <set name="tasks" table="tasks" lazy="false" fetch="join">
            <key>
                <column name="ID"/>
            </key>
            <one-to-many class="todo.domain.Task"/>
        </set>
    </class>


</hibernate-mapping>